# Marina Glen Backend - Environment Variables for Render

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name
# This will be automatically provided by Render PostgreSQL service

# Server Configuration
NODE_ENV=production
PORT=10000
# Render automatically provides PORT, but we set it for consistency

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here_generate_a_long_random_string
# Generate a secure random string for JWT signing

# CORS Configuration
CORS_ORIGIN=https://marinaglen.co.za
# Update this to your actual domain

# Email Configuration (Optional - for booking confirmations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@marinaglen.co.za
EMAIL_PASS=your_app_password
EMAIL_FROM=Marina Glen Holiday Resort <noreply@marinaglen.co.za>

# Payment Processing (Optional - if using Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload (Optional - for room images)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=another_secure_random_string_for_sessions